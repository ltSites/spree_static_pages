<% content_for :page_actions do %>
  <%= button_link_to t('itsites_static_pages.new_menu'), new_admin_itsites_page_menu_url, { class: 'btn-success', icon: 'add', id: 'new_admin_itsites_itsites_static_pages_link' } %>
<% end %>

<% content_for :page_title do %>
  <%= t('itsites_static_pages.title') %>
<% end %>

<table class="table sortable" id="listing_itsites_static_pages" data-hook >
  <thead>
  <tr data-hook="admin_itsites_static_pages_index_headers">
    <th colspan="2"><%= Spree.t(:name) %></th>
    <th><%= Spree.t(:active) %></th>
    <th><%= Spree.t(:hash_tag) %></th>
    <th data-hook="admin_itsites_static_pages_index_header_actions" class="actions"></th>
  </tr>
  </thead>
  <tbody>
  <% @menus.each do |menu|%>
    <tr id="<%= spree_dom_id menu %>" data-hook="admin_itsites_static_pages_index_rows">
      <td class="no-border">
        <span class="handle"></span>
      </td>
      <td class="align-center"><%= menu.name %></td>
      <td class="align-center"><%= menu.active %></td>
      <td class="align-center"><%= menu.hash_tag %></td>
      <td data-hook="admin_itsites_static_pages_index_row_actions" class="actions">
        <%= link_to_edit menu, no_text: true, class: 'edit' %>
        &nbsp;
        <%= link_to_delete menu, no_text: true %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
